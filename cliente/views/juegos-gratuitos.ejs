<!DOCTYPE html>
<%- include('header') %>
<html>
  <head>
    <title>Juegos Gratuitos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  </head>
  <body>
    <div class="container">
      <h1 class="my-4">Juegos Gratuitos</h1>
      <% if (juegos && juegos.length > 0) { %>
      <div class="row">
        <% juegos.forEach(function(juego) { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= juego.title %></h5>
              <p class="card-text">GÃ©nero: <%= juego.genre %></p>
              <a href="<%= juego.game_url %>" class="btn btn-primary" target="_blank">Ver juego</a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <p>No se encontraron juegos gratuitos.</p>
      <% } %>

      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= currentPage - 1 %>">Anterior</a>
          </li>
      
          <% 
            const visiblePages = Math.min(5, totalPages);  // Maximum of 5 pages shown
            const startIndex = Math.max(Math.ceil(currentPage - visiblePages / 2), 1);  // Calculate starting index for visible page range
            const endIndex = Math.min(startIndex + visiblePages - 1, totalPages);  // Calculate ending index for visible page range
          %>
      
          <% for (let i = startIndex; i <= endIndex; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
      
          <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= currentPage + 1 %>">Siguiente</a>
          </li>
        </ul>
      </nav>
    </div>
  </body>
</html>
