<!DOCTYPE html>
<html>
  <head>
    <title>Listado de Juegos</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      .game-image {
        max-width: 200px;
        max-height: 120px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="my-4">Listado de Juegos</h1>
      
      <!-- Formulario de búsqueda -->
      <form class="form-inline my-4" method="GET" action="<%= process.env.BASE_URI %>/juegos/">
        <input
          class="form-control mr-sm-2"
          type="search"
          placeholder="Buscar por título"
          aria-label="Buscar"
          name="search"
        />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
      </form>
      
      <div class="row">
        <% results.forEach(function(juego) { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img
              src="<%= juego.header_image %>"
              class="card-img-top game-image"
              alt="<%= juego.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= juego.name %></h5>
              <p class="card-text"><%= juego.short_description %></p>
              <p class="card-text">Precio: $<%= juego.price %></p>
              <p class="card-text">Fecha de Lanzamiento: <%= juego.release_date %></p>
              <p class="card-text">
                Categorías:
                <% juego.categories.forEach(function(category) { %>
                <span class="badge badge-primary"><%= category %></span>
                <% }); %>
              </p>
              <p class="card-text">
                Géneros:
                <% juego.genres.forEach(function(genre) { %>
                <span class="badge badge-secondary"><%= genre %></span>
                <% }); %>
              </p>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% if (next || prev) { %>
      <div class="mt-4">
        <% if (prev) { %>
        <a href="?prev=<%= prev %>" class="btn btn-secondary mr-2">Anterior</a>
        <% } %>
        <% if (next) { %>
        <a href="?next=<%= next %>" class="btn btn-primary">Siguiente</a>
        <% } %>
      </div>
      <% } %>
    </div>
  </body>
</html>
